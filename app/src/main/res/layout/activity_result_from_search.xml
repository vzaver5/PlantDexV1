<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/specificPlantFrag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbarStyle="outsideInset"
    android:scrollbarThumbVertical="?android:attr/scrollbarThumbVertical"
    android:scrollbars="vertical"
    android:verticalScrollbarPosition="right">

    <TextView
        android:id="@+id/specificationInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="Specification Info"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tempMinCFFill" />

    <TextView
        android:id="@+id/growthInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="Growth Info"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flowerConsFill" />

    <TextView
        android:id="@+id/fruitSeedInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="Fruit Or Seed info"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/plantImage"
        app:layout_constraintTop_toBottomOf="@+id/foliageTextureFill" />

    <TextView
        android:id="@+id/sciNameFill"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/addToGarden"
        app:layout_constraintStart_toEndOf="@+id/plantImage"
        app:layout_constraintTop_toBottomOf="@+id/addToGarden" />

    <TextView
        android:id="@+id/commNameFill"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:textAlignment="viewStart"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="@+id/addToGarden"
        app:layout_constraintStart_toEndOf="@+id/plantImage"
        app:layout_constraintTop_toBottomOf="@+id/sciNameFill" />

    <TextView
        android:id="@+id/flowerColorFill"
        android:layout_width="199dp"
        android:layout_height="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Flower Color: "
        android:textAlignment="viewStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flowerInfo" />

    <TextView
        android:id="@+id/flowerConsFill"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Flower Conspicuous: "
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="@+id/plantImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flowerColorFill" />

    <TextView
        android:id="@+id/foliageColorFill"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="10dp"
        android:text="Foliage Color: "
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/foliageInfo"
        app:layout_constraintTop_toBottomOf="@+id/foliageInfo" />

    <TextView
        android:id="@+id/foliageTextureFill"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="10dp"
        android:text="Foliage Texture: "
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/foliageInfo"
        app:layout_constraintTop_toBottomOf="@+id/foliageColorFill" />

    <TextView
        android:id="@+id/fruitSeedColorFill"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="10dp"
        android:text="Fruit/Seed Color:"
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/fruitSeedInfo"
        app:layout_constraintTop_toBottomOf="@+id/fruitSeedInfo" />

    <TextView
        android:id="@+id/fruitSeedConsFill"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="10dp"
        android:text="Flower Conspicuous: "
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/fruitSeedInfo"
        app:layout_constraintTop_toBottomOf="@+id/fruitSeedColorFill" />

    <TextView
        android:id="@+id/fruitSeedSeedPersistenceFill"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginTop="10dp"
        android:text="Seed Persistance: "
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/fruitSeedInfo"
        app:layout_constraintTop_toBottomOf="@+id/fruitSeedConsFill" />

    <TextView
        android:id="@+id/growthPhRangeFill"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="pH Range: "
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="@+id/flowerConsFill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/growthInformation" />

    <TextView
        android:id="@+id/precipRangeFill"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Precipitation Range: "
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="@+id/growthPhRangeFill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/growthPhRangeFill" />

    <TextView
        android:id="@+id/tempMinCFFill"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Min Temp: "
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="@+id/precipRangeFill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/precipRangeFill" />

    <TextView
        android:id="@+id/specificationGrowthFormFill"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Growth Form: "
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="@+id/tempMinCFFill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/specificationInfo" />

    <TextView
        android:id="@+id/specificationGrowthHabitFill"
        android:layout_width="0dp"
        android:layout_height="16dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Growth Habit: "
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="@+id/specificationGrowthFormFill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/specificationGrowthFormFill" />

    <TextView
        android:id="@+id/specificationGrowthRateFill"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Growth Rate: "
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="@+id/specificationShapeOriFill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/specificationShapeOriFill" />

    <TextView
        android:id="@+id/specificationShapeOriFill"
        android:layout_width="200dp"
        android:layout_height="17dp"
        android:layout_marginTop="10dp"
        android:text="Growth Shape: "
        android:textAlignment="viewStart"
        app:layout_constraintEnd_toEndOf="@+id/specificationGrowthHabitFill"
        app:layout_constraintStart_toStartOf="@+id/specificationGrowthHabitFill"
        app:layout_constraintTop_toBottomOf="@+id/specificationGrowthHabitFill" />

    <ImageView
        android:id="@+id/plantImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="176dp"
        android:contentDescription="Location of pictures of the plant"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/addToGarden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="22dp"
        android:text="Add To Garden"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/plantImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/flowerInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Flower Info"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/plantImage" />

    <TextView
        android:id="@+id/foliageInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="Foliage Info"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/plantImage"
        app:layout_constraintTop_toBottomOf="@+id/commNameFill" />

</androidx.constraintlayout.widget.ConstraintLayout>